    padding: wp(5),
    paddingTop: hp(2),
  },
  articleTitle: {
    fontSize: hp(3.5),
    fontWeight: 'bold',
    color: '#222',
    marginBottom: hp(2),
  },
  sectionContainer: {
    marginTop: hp(1),
  },
