### **15. `src/screens/NewsFormScreen.js`**
```jsx
import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  ScrollView,
  TextInput,
  TouchableOpacity,
  Image,
  StyleSheet,
  Alert,
} from 'react-native';
import AsyncStorage from '@react-native-async-storage/async-storage';
import { useNavigation, useRoute } from '@react-navigation/native';
import {
  widthPercentageToDP as wp,
  heightPercentageToDP as hp,
} from 'react-native-responsive-screen';

export default function NewsFormScreen() {
  const navigation = useNavigation();
  const route = useRoute();
  
  const { articleToEdit, articleIndex, onArticleEdited } = route.params || {};

  const [title, setTitle] = useState(articleToEdit?.title || '');
  const [image, setImage] = useState(articleToEdit?.image || '');
  const [description, setDescription] = useState(articleToEdit?.description || '');

  const saveArticle = async () => {
    if (!title.trim() || !description.trim()) {
      Alert.alert('Error', 'Please fill in all required fields');
      return;
    }

    const newArticle = { title, image, description };
    
    try {
      const existingArticles = await AsyncStorage.getItem('customArticles');
      const articles = existingArticles ? JSON.parse(existingArticles) : [];
      
      if (articleToEdit !== undefined && articleIndex !== undefined) {
        // Edit existing article
        articles[articleIndex] = newArticle;
        await AsyncStorage.setItem('customArticles', JSON.stringify(articles));
        if (onArticleEdited) onArticleEdited(); // Notify parent component
        Alert.alert('Success', 'Article updated successfully!');
      } else {
        // Add new article
        articles.push(newArticle);
        await AsyncStorage.setItem('customArticles', JSON.stringify(articles));
        Alert.alert('Success', 'Article saved successfully!');
      }
      
      navigation.goBack();
    } catch (error) {
      console.error('Error saving the article:', error);
      Alert.alert('Error', 'Failed to save article. Please try again.');
    }
  };

  return (
    <ScrollView style={styles.container}>
      <View style={styles.header}>
        <TouchableOpacity
          onPress={() => navigation.goBack()}
          style={styles.backButton}
        >
          <Text style={styles.backButtonText}>Cancel</Text>
        </TouchableOpacity>
        <Text style={styles.headerTitle}>
          {articleToEdit ? 'Edit Article' : 'New Article'}
        </Text>
        <TouchableOpacity onPress={saveArticle} style={styles.saveButton}>
          <Text style={styles.saveButtonText}>Save</Text>
        </TouchableOpacity>
      </View>

      <View style={styles.formContainer}>
        <View style={styles.inputGroup}>
          <Text style={styles.label}>Title *</Text>
          <TextInput
            style={styles.input}
            value={title}
            onChangeText={setTitle}
            placeholder="Enter article title"
            placeholderTextColor="#999"
          />
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>Image URL (Optional)</Text>
          <TextInput
            style={styles.input}
            value={image}
            onChangeText={setImage}
            placeholder="https://example.com/image.jpg"
            placeholderTextColor="#999"
          />
          {image ? (
            <Image
              source={{ uri: image }}
              style={styles.imagePreview}
              resizeMode="cover"
            />
          ) : (
            <View style={styles.imagePlaceholder}>
              <Text style={styles.placeholderText}>Upload Image URL</Text>
            </View>
          )}
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>Description *</Text>
          <TextInput
            style={[styles.input, styles.textArea]}
            value={description}
            onChangeText={setDescription}
            placeholder="Enter article description"
            placeholderTextColor="#999"
            multiline
            numberOfLines={6}
            textAlignVertical="top"
          />
        </View>

        <TouchableOpacity style={styles.submitButton} onPress={saveArticle}>
          <Text style={styles.submitButtonText}>
            {articleToEdit ? 'Update Article' : 'Save Article'}
          </Text>
        </TouchableOpacity>
      </View>
    </ScrollView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#f8f9fa',
  },
  header: {
    backgroundColor: '#6439FF',
    padding: wp(5),
    paddingTop: hp(6),
    flexDirection: 'row',
    justifyContent: 'space-between',
    alignItems: 'center',
  },
  backButton: {
    paddingHorizontal: wp(3),
    paddingVertical: hp(1),
  },
  backButtonText: {
    color: '#fff',
    fontSize: hp(1.8),
  },
  headerTitle: {
    fontSize: hp(2.5),
    fontWeight: 'bold',
    color: '#fff',
  },
  saveButton: {
    backgroundColor: '#fff',
    paddingHorizontal: wp(4),
    paddingVertical: hp(1),
    borderRadius: 20,
  },
  saveButtonText: {
    color: '#6439FF',
    fontSize: hp(1.8),
    fontWeight: '600',
  },
  formContainer: {
    padding: wp(5),
  },
  inputGroup: {
    marginBottom: hp(3),
  },
  label: {
    fontSize: hp(1.8),
    fontWeight: '600',
    color: '#333',
    marginBottom: hp(1),
  },
  input: {
    backgroundColor: '#fff',
    borderWidth: 1,
    borderColor: '#ddd',
    borderRadius: 8,
    padding: wp(4),
    fontSize: hp(1.8),
    color: '#333',
  },
  textArea: {
    height: hp(20),
    textAlignVertical: 'top',
  },
  imagePreview: {
    width: '100%',
    height: hp(25),
    borderRadius: 8,
    marginTop: hp(2),
  },
  imagePlaceholder: {
    width: '100%',
    height: hp(25),
    backgroundColor: '#e9ecef',
    borderRadius: 8,
    justifyContent: 'center',
    alignItems: 'center',
    marginTop: hp(2),
  },
  placeholderText: {
    fontSize: hp(1.8),
    color: '#666',
  },
  submitButton: {
